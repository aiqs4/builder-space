# Example Terraform variables file
# Copy this to terraform.tfvars and customize as needed

# AWS Region - South Africa
aws_region = "af-south-1"

# EKS Cluster Configuration
cluster_name    = "builder-space"
cluster_version = "1.28"

# Node Group Configuration
node_instance_types = ["t4g.small"] # ARM instances for cost efficiency
node_desired_size   = 2
node_max_size       = 3
node_min_size       = 1
node_disk_size      = 20 # GB per node

# VPC Configuration
vpc_cidr             = "10.0.0.0/16"
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
enable_dns_hostnames = true
enable_dns_support   = true
map_public_ip_on_launch = true

# Additional Tags
tags = {
  Project     = "builder-space-eks"
  Environment = "development"
  Owner       = "development-team"
  CostCenter  = "engineering"
  Purpose     = "low-cost-eks-development"
}